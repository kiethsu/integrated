.overlay-container {
    position: absolute;
    top: 27%; /* Centers vertically based on viewport height */
    left: 45.3%; /* Centers horizontally */
    transform: translate(-86%, -20%); /* Ensures the container stays centered */
    z-index: 16;
    width: 20%; /* Percentage-based width for responsive scaling */
    max-width: 400px; /* Adds a max-width to control excessive growth on large screens */
    padding: 2%; /* Responsive padding */
    background: rgba(202, 202, 202, 0.3);
    backdrop-filter: blur(5px);
    border-radius: 10px;
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #ffffff;
    text-align: center;
    height: 60%;
  }

  .overlay-container img {
    width: 70%; /* Makes the image responsive within container */
    height: auto;
    margin-bottom: 3%;
  }

  .overlay-container h2 {
    font-size: 2vw;
    max-font-size: 30px;
    margin: 0;
    font-family: 'Fira Sans', sans-serif;
  }

  .overlay-container p {
