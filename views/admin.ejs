  <title>Register</title>
  <style>
        .bottom-link {
      margin-top: 20px;
      text-align: center;
      font-size: 14px; /* Font size */
      font-family: 'Fira sans', sans-serif; /* Font family */
    }

    .bottom-link a {
      text-decoration: none;
      color: blue;
      font-size: 14px; /* Font size */
      font-weight: 500;
      font-family: 'Fira sans', sans-serif; /* Font family */
    }

    .bottom-link a:hover {
      text-decoration: underline;
    }
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        height: 100vh;
        background-color: #8fd0b3a8;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .container {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 80%;
      height: 80%;
      max-width: 1200px;
      max-height: 800px;
      padding: 20px;
      background-color: #4e000000;
    }

    .signin span {
      color: #000000;
      font-family: 'Fira sans', sans-serif;  
      font-size: 70px;
      font-weight: 800;
      text-align: left;
      display: block;
      padding-top: 60px;
      padding-bottom: 10px;
    }

    .form-section {
        width: 45%;
        height: 80vh;
        padding-left: 90px;
        padding-right: 80px;
        background-color: #fffdf6;
        box-shadow: 8px 8px 30px rgba(0, 0, 0, 0.3);
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        align-items: flex-start;
        border-radius: 20px 0px 0px 20px;
    }

    .video-section {
      width: 65%;
      height: 82vh;
      display: flex;
      justify-content: center;
      align-items: center;
      position: relative;
    }

    .video-section video {
      width: 100%;
      height: 100%;
      object-fit: cover;
      box-shadow: -10px 10px 10px 5px rgba(0, 0, 0, 0.5);
      z-index: 15;
      border-radius: 10px;
    }

    form {
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-top: 20px;
    }

    .input-container {
        position: relative;
        margin-bottom: 30px;
        border: 2px solid transparent; /* Make border transparent initially */
        border-radius: 5px; /* Rounded corners for the input container */
        transition: border-color 0.3s; /* Smooth transition for border color */
    }

    .floating-label {
        position: absolute;
        top: 14px;
        left: 14px;
        font-size: 18px;
        color: #999;
        transition: 0.2s ease all;
    }

    input {
        padding: 14px;
        border-radius: 5px;
        width: 100%;
        box-sizing: border-box;
        border-width: .5px;
    }

    input:focus + .floating-label,
    input:not(:placeholder-shown) + .floating-label {
        top: -25px;
        left: -14px;
        font-size: 20px;
        color: #000000;
    }

    .toggle-password {
        cursor: pointer;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        opacity: 30%;
      }

      .toggle-password i {
        font-size: 30px;
      }

    button {
        padding: 20px;
        border: none;
        background-color: #004aad; /* Initial background color */
        color: white; /* Text color */
        font-size: 18px; /* Font size */
        font-weight: 500;
        font-family: 'Fira sans', sans-serif; /* Font family */
        border-radius: 10px; /* Rounded corners */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s; /* Smooth transition */
    }

    button:hover {
        background-color: #004aad; /* Change background on hover */
        transform: translateY(-4px); /* Lift the button slightly */
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); /* Add shadow for depth */
    }

    .view-password {
        display: flex;
        align-items: center;
        margin: 10px 0;
        cursor: pointer;
    }
    .services {
      padding: 8px;
      border: none;
      background-color: #004aad; /* Initial background color */
      color: white; /* Text color */
      font-size: 10px; /* Font size */
      font-family: 'Fira sans', sans-serif; /* Font family */
      border-radius: 10px; /* Rounded corners */
      cursor: pointer; /* Pointer cursor on hover */
      transition: background-color 0.3s, transform 0.3s, box-shadow 0.3s; /* Smooth transition */
      margin-top: 20px;
    }

    .services:hover {
      transform: translateY(-5px); /* Move button up on hover */
      box-shadow: 0px 8px 12px rgba(0, 0, 0, 0.3); /* Increase shadow on hover */
    }

    .icon-chevron-right-services,
    .icon-chevron-right2-services {
      width: 10px; /* Icon width */
      height: 10px; /* Icon height */
      transition: transform 0.3s ease; /* Add transition for icon movement */
      transform: rotate(180deg); /* Rotate the icon by 180 degrees */
    }

    .services:hover .icon-chevron-right-services,
    .services:hover .icon-chevron-right2-services {
      animation: moveLeft 0.8s linear infinite; /* Continuous movement when hovered */
    }

    @keyframes moveLeft {
      0% {
        transform: translateX(0) rotate(180deg); /* Start at the original position and rotated */
      }
      50% {
        transform: translateX(-8px) rotate(180deg); /* Move the icons to the left while maintaining rotation */
      }
      100% {
        transform: translateX(0) rotate(180deg); /* Move back to the original position while maintaining rotation */
      }
    }

